@page
@model WebApp.Pages.Grades.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Add new grade at @Model.SubjectSemester.SubjectSemesterName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grade.GradeNumber" class="control-label"></label>
                <input asp-for="Grade.GradeNumber" class="form-control" />
                <span asp-validation-for="Grade.GradeNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Grade.IsPassed" /> @Html.DisplayNameFor(model => model.Grade.IsPassed)
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">Person name</label>
                <select asp-for="Grade.PersonSubjectSemesterId" class ="form-control" asp-items="ViewBag.PersonSubjectSemesterId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="SubjectGrades" asp-route-id="@Model.SubjectSemester.SubjectSemesterId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
