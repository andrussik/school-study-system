@model WebApp.Pages.SubjectSemesters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubjectSemester[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectSemester[0].Semester)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SubjectSemester) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester.SemesterName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SubjectSemesterId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SubjectSemesterId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SubjectSemesterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
