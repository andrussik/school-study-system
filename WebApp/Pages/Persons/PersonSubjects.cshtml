@page
@model WebApp.Pages.Persons.PersonSubjects

@{
    Layout = Layout;
}

<h5>Subjects of @Model.Person.FirstLastName</h5>

<table class="table table-hover" style="table-layout: fixed; word-wrap: break-word; text-align: center">
    <thead>
    <tr>
        <th scope="col">
            <a>Subject</a>
        </th>
        <th scope="col">
            <a>Semester</a>
        </th>
        <th scope="col">
            <a>Role</a>
        </th>
        <th scope="col">
            
        </th>
    </tr>
    </thead>
    <tbody>
    
    @foreach (var item in Model.PersonSubjectSemesters)
    {
        if (item.Grades.Any())
        {
            @foreach (var grade in item.Grades)
            {
                <tr>
                    <td class="align-middle">
                        @item.SubjectSemester.Subject.SubjectName
                    </td>
                    <td class="align-middle">
                        @item.SubjectSemester.Semester.SemesterName
                    </td>
                    <td class="align-middle">
                        @item.Role.RoleName
                    </td>
                    <td class="align-middle">
                        <a asp-page="/PersonSubjectSemesters/Edit" asp-route-id="@item.PersonSubjectSemesterId">Edit</a> |
                        <a asp-page="/PersonSubjectSemesters/Details" asp-route-id="@item.PersonSubjectSemesterId">Details</a> |
                        <a asp-page="/PersonSubjectSemesters/Delete" asp-route-id="@item.PersonSubjectSemesterId">Delete</a>
                    </td>
                </tr>
            }
        }
    }
    
    </tbody>
</table>