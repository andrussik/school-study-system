@page
@model WebApp.Pages.Subjects.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Subject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subject.SubjectId" />
            <div class="form-group">
                <label asp-for="Subject.SubjectName" class="control-label"></label>
                <input asp-for="Subject.SubjectName" class="form-control" />
                <span asp-validation-for="Subject.SubjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.Description" class="control-label"></label>
                <input asp-for="Subject.Description" class="form-control" />
                <span asp-validation-for="Subject.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Subject.IsGradable" /> @Html.DisplayNameFor(model => model.Subject.IsGradable)
                </label>
            </div>
        <div class="form-group">
            <label asp-for="Subject.ECTS" class="control-label"></label>
            <input asp-for="Subject.ECTS" class="form-control" />
            <span asp-validation-for="Subject.ECTS" class="text-danger"></span>
        </div>
            <div>
                <label asp-for="SemesterIds" class="control-label"></label>
                <select asp-for="SemesterIds" class="form-control selectpicker" data-live-search="true" data-size="3" asp-items="ViewBag.SemesterId" multiple="multiple"></select>
                <span asp-validation-for="Subject.SubjectSemesters" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
