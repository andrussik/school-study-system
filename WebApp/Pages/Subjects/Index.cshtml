@page
@model WebApp.Pages.Subjects.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Subjects</h1>

<form method="get">
    <input type="hidden" name="handler" value="Search"/>
    <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4">
        <div class="input-group">
            <input type="search" placeholder="What're you searching for?" aria-describedby="button-addon1" name="SearchString" value="@Model.SearchString" class="form-control border-0 bg-light">
            <div class="input-group-append">
                <button type="submit" class="btn btn-link text-primary">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject[0].SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject[0].IsGradable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject[0].ECTS)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Subject) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsGradable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ECTS)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SubjectId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SubjectId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SubjectId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
